
<div class="row">
  <div class="mb-5">
    <form action="/recipes/create" method="post" enctype="multipart/form-data" class="create-recipe">
      <h4 class="justify-content-center mb-3">Create Recipe</h4> 
      <div class="form-group mb-3">
        <label class="form-label">Title:
          <textarea name="title"  cols="84" rows="1" class="form-control"></textarea>        
        </label>
      </div>
      <div class="form-group mb-3">
        <label class="form-label">Ingredients:
          <textarea name="ingredients" cols="84" rows="10" class="form-control"></textarea>
        </label>
      </div>
      <div class="form-group mb-3">
        <label class="form-label">Instructions:
          <textarea name="instructions" cols="84" rows="10" class="form-control"></textarea>
        </label>
      </div>

      <div class="form-group mb-3">
        <label for="formFile" class="form-label">Image:
          <input
            type="file"
            name="recipe-cover-image"
            class="form-control mb-3"
            id="formFile"
          />
        </label>
      </div>

      <button  type="submit" id="btn" class="btn mb-3">Create</button>
    </form>

    <form class="create-recipe" action="/cookbook">
        <button type="submit" class="btn mb-3">Cancel</button>
    </form>


  </div>
</div>