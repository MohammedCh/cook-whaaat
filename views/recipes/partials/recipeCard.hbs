<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img
        src="{{this.imageUrl}}"
        class="img-fluid rounded-start"
        alt="{{this.title}}"
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
      </div>
      <a href="/recipes/{{this._id}}/edit">Edit</a>
    </div>
  </div>
</div>