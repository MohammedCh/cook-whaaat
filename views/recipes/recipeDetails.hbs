<div class="p-5 ms-5">

    <div class="mb-5 row nowrap justify-content-left">

        <div class="col-10">
            <h2 class="apple">{{recipesWithCurrentUser.title}}</h2>
        </div>

        <div class="row">
         {{#ifEqual recipesWithCurrentUser.creator recipesWithCurrentUser.userId}}
              <form action="/recipes/{{recipesWithCurrentUser._id}}/edit" method="get" class="short p-2">
                  <button type="submit" class="btn btn-light px-2" style="color: var(--orange) !important;">
                    <img src="/images/editIcon.png" alt="pencil icon" class="px-2"> Edit</button>
              </form>

            <form action="/recipes/{{recipesWithCurrentUser._id}}/delete" method="post" class="xshort p-2">
              <button id="deleteButton" type="submit" class="btn btn-light px-3" style="color: var(--orange) !important;">Delete</button>
            </form>

          {{/ifEqual}}

            <form action="/recipes/favorite" method="post" class="long p-2">
              <input class="hidden" value="{{recipesWithCurrentUser._id}}" name="recipeId" />
              <button id="favoriteButton" type="submit" class="btn btn-light px-3" style="color: var(--orange) !important;">Add
                Favorite</button>
            </form>
        </div>
