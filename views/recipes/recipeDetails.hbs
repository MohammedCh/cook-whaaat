<div class="p-5 ms-5">

    <div class="mb-5 row  justify-content-left">

        <div class="col-7">
            <h2 class="apple">{{recipe.title}}</h2>
        </div>

    {{#ifNotEqual recipe.creator "CookWhaaatAdmin"}}
        <form action="/recipes/{{recipe._id}}/edit" method="get" class="col-4 right px-2">
            <button type="submit" class="btn btn-light" style="color: var(--orange) !important;">
               <img src="/images/editIcon.png" alt="pencil icon" class="px-2"> Edit</button>
        </form>
      <form action="/recipes/{{recipe._id}}/delete" method="post">
        <button id="deleteButton" type="submit" class="btn btn-primary">delete</button>
      </form>
    {{/ifNotEqual}}
      <form action="/recipes/favorite" method="post">
        <input class="hidden" value="{{recipe._id}}" name="recipeId" />
        <button id="favoriteButton" type="submit" class="btn btn-primary">Add
          Favorite</button>
      </form>

    </div>


    <div class="row">
        <div class="col-md-5">

            <div class="form-group mb-5">
                <img src="{{recipe.imageUrl}}" class="img-fluid rounded-start recipe-image" alt="{{recipe.title}}">
            </div>

            <div class="form-group mb-5">
                <h4 class="apple">Ingredients</h4>
                <ul>{{#each recipe.ingredients}}
                      <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>

        </div>

        <div class="col-lg-6">

            <div class="form-group mb-5">

                <h4 class="apple">Instructions</h4>

                {{!-- <p>{{recipe.instructions}}</p> --}}
                <ol>{{#each recipe.instructions}}
                      <li>{{this}}</li>
                    {{/each}}
                </ol>
            </div>
        </div>
    </div>
</div>


